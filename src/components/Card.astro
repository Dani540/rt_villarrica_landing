---
interface Props{
    title: string;
    description: string;
}

const props = Astro.props;
---

<div class="card">
    <h2>{props.title}</h2>
    <p class="description">{props.description}</p>
</div>

<style>
    .card {
        padding: 1rem;
        border: 2px solid #ccc;
        border-radius: 0.5rem;
        margin-bottom: 1rem;

        min-width: 200px;
        min-height: 200px;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        user-select: none;

        .description{
            color: #444;
        }
    }

    .card:hover{
        cursor: pointer;
    }

</style>

